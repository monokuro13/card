<header class="posts">
  <div class="header-logo">
  <% if @current_user %>
    <%= link_to("TweetApp", "/posts/index") %>
  <% else %>
    <%= link_to("TweetApp", "/") %>
  <% end %>
  </div>
  <ul class="header-menus">

    <% if @current_user %>
      <li>
        <%= link_to(@current_user.name, "/users/#{@current_user.id}", {class: "top-link"}) %>
      </li>
      <li>
        <%= link_to("投稿一覧", "/posts/index", {class: "top-link"}) %>
      </li>
      <li>
        <%= link_to("新規投稿", "/posts/new", {class: "top-link"}) %>
      </li>
      <li>
      <%= link_to("ユーザー一覧", "/users/index", {class: "top-link"}) %>
      </li>
      <li>
        <%= link_to("メッセージ一覧", "/rooms/index", {class: "top-link"}) %>
      </li>
      <li>
      <%= link_to("ログアウト", "/logout", {method: "post"}) %>
      </li>
    <% else %>
      <li>
      <%= link_to("トレカ交換とは", "/about", {class: "top-link"}) %>
      </li>
      <li>
        <%= link_to("投稿一覧", "/posts/index", {class: "top-link"}) %>
      </li>
      <li>
      <%= link_to("新規登録", "/signup", {class: "top-link"}) %>
      </li>
      <li>
        <%= link_to("ログイン", "/login", {class: "top-link"}) %>
      </li>
    <% end %>
  </ul>
</header>

<div class="main posts-index">
  <div class="container">
    <%= search_form_for @p, url: search_path do |f| %>
      <div class = 'group'>
        <%= f.text_field :group_cont, placeholder: "グループから探す", class: "input-box" %>
      </div>
      <div class = 'request'>
        <%= f.text_field :request_cont, placeholder: "欲しいカードから探す", class: "input-box" %>
      </div>
      <div class = 'give'>
        <%= f.text_field :give_cont, placeholder: "あげるカードから探す", class: "input-box" %>
        <%= submit_tag 'Search', :name => nil %>
      </div>
    <% end %>

    <% if @results.present? %>
      <% @results.each do |post| %>
        <div class="posts-index-item">
          <div class="post-left">
            <img src="<%= "/user_images/#{post.user.image_name}" %>">
          </div>
          <div class="post-right">
            <div class="post-user-name">
              <%= link_to(post.user.name, "/users/#{post.user.id}", {class: "link"}) %>
            </div>
            <div class="group">
              <%= link_to(post.group, "/posts/#{post.id}", {class: "link"})%>
            </div>
            <div class="request">
              <%= link_to(post.request, "/posts/#{post.id}", {class: "link"})%>
            </div>
            <div class="give">
              <%= link_to(post.give, "/posts/#{post.id}", {class: "link"})%>
            </div>
            <div class="content">
              <%= link_to(post.content, "/posts/#{post.id}", {class: "link"})%>
            </div>
            <div class="image">
              <img src = "<%= "/post_images/#{post.img}" %>" width="400" height="auto">
            </div>
            <div class="movie">
              <video src = "<%= "/post_movies/#{post.movie}" %>" width="400" type="video/*"  controls></video>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div>
        <p>一致するカードがありません。条件を変えて検索してみよう！</p>
      </div>
    <% end %>
  </div>
</div>
