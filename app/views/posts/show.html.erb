<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <div class="post-left">
        <img src="<%= "/user_images/#{@user.image_name}" %>">
      </div>
      <div class="post-right">
        <div class="post-user-name">
          <%= link_to(@user.name, "/users/#{@user.id}", {class: "link"}) %>
        </div>
        <p class="group">
          <%= @post.group %>
        </p>
        <p class="album">
          <%= @post.album %>
        </p>
        <p class="request">
          <%= @post.request %>
        </p>
        <p class="give"> 
          <%= @post.give %>
        </p>
        <p class="content">
          <%= @post.content %>
        </p>
        <%= link_to "/post_images/#{@post.img}", "data-lightbox" => "/post_images/#{@post.img}" do %>
          <%= image_tag "/post_images/#{@post.img}", class:"post-show-img" %>
        <% end %>
        <div class="video">
         <video src = "<%= "/post_movies/#{@post.movie}" %>" width="400" type="video/*"  controls></video>
        </div>
      </div>
        <div class="post-time">
        <%= @post.created_at %>
        </div>
      <% if Like.find_by(user_id: @current_user.id, post_id: @post.id) %>
        <%= link_to("/likes/#{@post.id}/destroy", {method: "post"}) do %>
          <span class="fa fa-heart like-btn-unlike"></span>
        <% end %>
      <% else %>
        <%= link_to("/likes/#{@post.id}/create", {method: "post"}) do %>
          <span class="fa fa-heart like-btn"></span>
        <% end %>
      <% end %>
      <%= @likes_count %>

      <% if @post.user_id == @current_user.id %>
        <div class="post-menus">
          <%= link_to("編集", "/posts/#{@post.id}/edit") %>
          <%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "post"}) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
