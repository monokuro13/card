<header class="posts">
  <div class="header-logo">
    <% if @current_user %>
      <%= link_to("TweetApp", "/posts/index") %>
    <% else %>
      <%= link_to("TweetApp", "/") %>
    <% end %>
  </div>
  <ul class="header-menus">

    <% if @current_user %>
      <li>
        <%= link_to(@current_user.name, "/users/#{@current_user.id}", {class: "top-link"}) %>
      </li>
      <li>
        <%= link_to("投稿一覧", "/posts/index", {class: "top-link"}) %>
      </li>
      <li>
        <%= link_to("新規投稿", "/posts/new", {class: "top-link"}) %>
      </li>
      <li>
      <%= link_to("ユーザー一覧", "/users/index", {class: "top-link"}) %>
      </li>
      <li>
        <%= link_to("メッセージ一覧", "/rooms/index", {class: "top-link"}) %>
      </li>
      <li>
      <%= link_to("ログアウト", "/logout", {method: "post"}) %>
      </li>
    <% else %>
      <li>
      <%= link_to("トレカ交換とは", "/about", {class: "top-link"}) %>
      </li>
      <li>
        <%= link_to("投稿一覧", "/posts/index", {class: "top-link"}) %>
      </li>
      <li>
      <%= link_to("新規登録", "/signup", {class: "top-link"}) %>
      </li>
      <li>
        <%= link_to("ログイン", "/login", {class: "top-link"}) %>
      </li>
    <% end %>
  </ul>
</header>

<div class="message-index">
  <% @anotherEntries.each do |e| %>
    <div class="users-index-item">
      <div class="user-left">
        <%= link_to "/rooms/#{e.room.id}" do %>
      
          <img src="<%= "/user_images/#{e.user.image_name}" %>">
        <% end %>
      </div>
      <div class="user-right">
        <%= link_to "/rooms/#{e.room.id}" do %>
          <%= e.user.name %>さんのチャットへ<br>
          <% if e.room.message_ids.last %>
            <%= Message.find_by(id: e.room.message_ids.last).content %>
          <% else %>
            <p>まだメッセージはありません</p>
          <% end %>
        <% end %>
      </div>
      
  </div>
  <% end %>
</div>
  

